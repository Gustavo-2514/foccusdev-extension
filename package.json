{
  "name": "foccusdev",
  "publisher": "gustavo-2514",
  "displayName": "FoccusDEV",
  "description": "Monitora e gerencia o tempo gasto codificando, te dando total controle sobre o seu tempo na programação",
  "version": "1.0.1",
  "icon": "src/media/foccusdev-logo.webp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gustavo-2514/foccusdev-extension.git"
  },
  "homepage": "https://github.com/Gustavo-2514/foccusdev-extension#readme",
  "bugs": {
    "url": "https://github.com/Gustavo-2514/foccusdev-extension/issues"
  },
  "keywords": [
    "time-tracking",
    "productivity",
    "coding",
    "dashboard",
    "developer"
  ],
  "author": {
    "name": "Gustavo Machado Albuquerque"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onDidChangeTextDocument",
    "onView:foccusdevView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "foccusdev.openDashboard",
        "title": "FoccusDEV: Abrir Painel"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "foccusdev",
          "title": "FoccusDEV",
          "icon": "src/media/foccusdev.svg"
        }
      ]
    },
    "views": {
      "foccusdev": [
        {
          "id": "foccusdevView",
          "type": "webview",
          "name": "Painel",
          "icon": "src/media/foccusdev.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sql.js": "^1.13.0",
    "uuid": "^8.3.2"
  }
}
